pipeline {
    agent any

    environment {
        DOCKER_IMAGE   = "ahmad201218/finalversion:latest"
        EC2_HOST       = "13.60.48.34"
        REMOTE_USER    = "ubuntu"
        CONTAINER_NAME = "my_app"
        HOST_PORT      = "80"
        CONTAINER_PORT = "8080"
    }

    stages {
        stage('Deploy on EC2') {
            steps {
                echo "Entering SSH stage..."
                // Use the 'bat' step for Windows command line.
                bat """
                ssh -i "C:/ProgramData/Jenkins/.ssh/dodoRSA.pem" -o StrictHostKeyChecking=no %REMOTE_USER%@%EC2_HOST% "echo Connected to EC2 && docker pull %DOCKER_IMAGE% && docker stop %CONTAINER_NAME% || echo Skipped && docker rm %CONTAINER_NAME% || echo Skipped && docker run -d --name %CONTAINER_NAME% -p %HOST_PORT%:%CONTAINER_PORT% %DOCKER_IMAGE%"
                """
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}
