pipeline {
    agent any

    environment {
        DOCKER_IMAGE       = "ahmad201218/finalversion:latest"
        EC2_HOST           = "ec2-13-60-48-34.eu-north-1.compute.amazonaws.com"
        SSH_CREDENTIALS_ID = "jenkins-ec2-ssh" // This is the ID you set in Jenkins for your SSH credentials
        REMOTE_USER        = "ubuntu"
        CONTAINER_NAME     = "my_app"
        HOST_PORT          = "80"
        CONTAINER_PORT     = "8080"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                bat "docker build -t ${DOCKER_IMAGE} ."
            }
        }

        stage('Push Docker Image') {
            steps {
                bat "docker push ${DOCKER_IMAGE}"
            }
        }

        stage('Deploy on EC2') {
            steps {
                sshagent (credentials: [env.SSH_CREDENTIALS_ID]) {
                    bat """
                    ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${EC2_HOST} \\
                    'docker pull ${DOCKER_IMAGE} && \\
                    docker stop ${CONTAINER_NAME} || true && \\
                    docker rm ${CONTAINER_NAME} || true && \\
                    docker run -d --name ${CONTAINER_NAME} -p ${HOST_PORT}:${CONTAINER_PORT} ${DOCKER_IMAGE}'
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
