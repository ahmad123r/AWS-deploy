pipeline {
    agent any

    environment {
        DOCKER_IMAGE   = "ahmad201218/finalversion:latest"
        EC2_HOST       = "13.60.48.34"
        REMOTE_USER    = "ubuntu"
        CONTAINER_NAME = "my_app"
        HOST_PORT      = "80"
        CONTAINER_PORT = "8080"
    }

    stages {
        stage('Deploy on EC2') {
            steps {
                echo "Entering SSH stage..."
                // Use the 'bat' step for Windows command line.
                sh """
                ssh -tt "/home/ahmad/Downloads/dodoRSA.pem" -o StrictHostKeyChecking=no $REMOTE_USER@$EC2_HOST << EOF
                echo Connected to EC2
                """
            }
        }
    }

    post {
        success {
            echo "Deployment successful!"
        }
        failure {
            echo "Deployment failed!"
        }
    }
}
